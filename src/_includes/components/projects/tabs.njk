<div class="tab-headers">
    <!-- Mobile: scrollable titles only -->
    <div class="flex md:hidden overflow-x-auto border-b space-x-2 p-2">
        <template x-for="(project, idx) in filteredProjects" :key="idx">
        <button
            class="tab-chip"
            @click="active = idx + 1"
            :class="active === idx + 1 ? 'tab-chip-active' : 'tab-chip-inactive'"
        >
            <span x-text="project.title"></span>
        </button>
        </template>
    </div>

    <!-- Desktop: logo + title list -->
    <div class="hidden md:flex flex-col border-r space-y-2 p-2">
        <template x-for="(project, idx) in filteredProjects" :key="idx">
            <button
            @click="active = idx + 1"
            :class="[
                'tab-button',
                active === idx + 1 ? 'tab-button-active' : 'tab-button-inactive'
            ]"
            >
            <img
                :src="project.logo"
                :alt="project.title + ' logo'"
                loading="lazy"
                class="tab-logo"
            />
            <span x-text="!project.logoHasName ? project.title : ''"></span>
            </button>
        </template>
    </div>
</div>
