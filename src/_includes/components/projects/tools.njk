<div class="mt-4">
    <h4 class="font-medium">Tools used:</h4>
    <ul class="flex flex-wrap gap-2 mt-2">
    <template x-for="toolId in project.tools" :key="toolId">
        <li class="flex items-center gap-1 text-sm surface-badge px-2 py-1 rounded">
        <img
            :src="(() => {
            const t = tools.find(x => x.id === toolId);
            return t ? t.icon : '';
            })()"
            :alt="(() => {
            const t = tools.find(x => x.id === toolId);
            return t ? t.name : '';
            })()"
            loading="lazy"
            class="w-4 h-4"
        />
        <span x-text="(() => {
            const t = tools.find(x => x.id === toolId);
            return t ? t.name : '';
        })()"></span>
        </li>
    </template>
    </ul>
</div>
