---
layout: layouts/base.njk
pagination:
  data: projects
  size: 1
  alias: project
permalink: "case-studies/{{ project.slug }}/"
eleventyComputed:
  title: "{{ project.title }} Case Study"
---

<section class="code-bg pt-20 pb-24">
  <div class="max-w-5xl mx-auto px-4 flex flex-col gap-10 md:flex-row md:items-center">
    <div class="flex-1">
      <p class="eyebrow eyebrow--wide">Case Study</p>
      <h1 class="mt-4 mb-6">{{ project.title }}</h1>
      <p class="text-white/85 text-lg">
        {{ project.problem }}
      </p>
      {% if project.type %}
        <div class="flex flex-wrap gap-3 mt-6">
          {% for type in project.type %}
            <span class="uppercase tracking-[0.2em] text-xs font-semibold bg-white/10 px-4 py-2 rounded-full">{{ type }}</span>
          {% endfor %}
        </div>
      {% endif %}
      {% if project.url %}
        <a href="{{ project.url }}" class="hero-cta hero-cta--secondary mt-8 inline-flex" target="_blank" rel="noopener">Visit live site</a>
      {% endif %}
    </div>
    {% if project.logo %}
      <div class="bg-white/5 rounded-2xl p-6 flex items-center justify-center flex-shrink-0 md:w-72">
        <img src="{{ project.logo }}" alt="{{ project.title }} logo" class="max-h-24 w-full object-contain">
      </div>
    {% endif %}
  </div>
</section>

<section class="py-20 bg-white dark:bg-zinc-900 section-arrow pt-36">
  <div class="max-w-5xl mx-auto px-4 grid gap-10 md:grid-cols-3">
    <div class="md:col-span-2 space-y-8">
      <div>
        <p class="eyebrow eyebrow--compact text-electric-dark">Challenge</p>
        <h2 class="text-3xl font-bold mt-4 mb-3">What they needed</h2>
        <p class="text-lg text-zinc-700 dark:text-zinc-200">{{ project.problem }}</p>
      </div>
      <div>
        <p class="eyebrow eyebrow--compact text-electric-dark">Approach</p>
        <h2 class="text-3xl font-bold mt-4 mb-3">How we solved it</h2>
        <p class="text-lg text-zinc-700 dark:text-zinc-200">{{ project.solution }}</p>
      </div>
    </div>
    <div class="case-study-sidebar bg-background-medium/80 dark:bg-zinc-800">
      <div>
        <p class="text-sm uppercase tracking-[0.2em] text-zinc-500">Completed</p>
        <p class="text-2xl font-semibold">{{ project.endDate | formatProjectDate }}</p>
      </div>
      {% if project.type %}
        <div>
          <p class="text-sm uppercase tracking-[0.2em] text-zinc-500">Services</p>
          <ul class="mt-2 space-y-1">
            {% for type in project.type %}
              <li class="text-lg capitalize">{{ type }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
      {% if project.url %}
        <div>
          <p class="text-sm uppercase tracking-[0.2em] text-zinc-500">Website</p>
          <a href="{{ project.url }}" class="text-blue-600 underline break-words" target="_blank" rel="noopener">{{ project.url }}</a>
        </div>
      {% endif %}
      {% if project.tools %}
        <div>
          <p class="text-sm uppercase tracking-[0.2em] text-zinc-500">Stack highlights</p>
          <ul class="flex flex-wrap gap-3 mt-3">
            {% for toolId in project.tools %}
              {% set tool = tools | find("id", toolId) %}
              {% if tool %}
                <li class="flex items-center gap-2 bg-white/80 dark:bg-zinc-900/60 rounded-full px-3 py-1 text-sm font-medium text-zinc-700 dark:text-zinc-200">
                  {% if tool.icon %}
                    <img src="{{ tool.icon }}" alt="" class="w-5 h-5" loading="lazy">
                  {% endif %}
                  <span>{{ tool.name }}</span>
                </li>
              {% else %}
                <li class="flex items-center gap-2 bg-white/80 dark:bg-zinc-900/60 rounded-full px-3 py-1 text-sm font-medium text-zinc-700 dark:text-zinc-200">
                  <span>{{ toolId }}</span>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% if project.screenshots %}
<section class="py-16 bg-background-medium dark:bg-zinc-900">
  <div class="max-w-5xl mx-auto px-4">
    <div class="mb-8 text-center">
      <p class="eyebrow eyebrow--wide text-electric-dark">Gallery</p>
      <h2 class="text-3xl font-bold mt-3">Screens & flows</h2>
    </div>
    <div
      x-data="projectCarousel({{ project | dump | safe }})"
      x-init="init()"
      @mouseenter="stop()"
      @mouseleave="start()"
      @focusin="stop()"
      @focusout="start()"
      tabindex="0"
      aria-roledescription="carousel"
      aria-label="{{ project.title }} screenshots"
      class="relative w-full overflow-hidden border border-gray-300 shadow-xl rounded-3xl"
      style="aspect-ratio: 13 / 9;"
    >
      <template x-for="(src, i) in images" :key="i">
        <div
          x-show="current === i"
          class="absolute inset-0"
          x-transition:enter="transition ease-out duration-500"
          x-transition:enter-start="translate-x-full"
          x-transition:enter-end="translate-x-0"
          x-transition:leave="transition ease-in duration-500"
          x-transition:leave-start="translate-x-0"
          x-transition:leave-end="-translate-x-full"
        >
          <template x-if="src.toLowerCase().endsWith('.mp4') || src.toLowerCase().endsWith('.webm')">
            <video
              :src="src"
              preload="none"
              poster="/img/screenshots/video-poster.png"
              class="w-full h-full object-cover"
              autoplay
              muted
              loop
              playsinline
              :aria-label="`${project.title} demo video`"
            ></video>
          </template>
          <template x-if="!(src.toLowerCase().endsWith('.mp4') || src.toLowerCase().endsWith('.webm'))">
            <img
              :src="src"
              loading="lazy"
              class="w-full h-full object-cover"
              :alt="`${project.title} screenshot ${i + 1}`"
            />
          </template>
        </div>
      </template>
      <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2">
        <template x-for="(src, i) in images" :key="i">
          <button
            @click="current = i"
            :class="{
              'w-3 h-3 rounded-full bg-white': true,
              'opacity-50': current !== i,
              'opacity-100': current === i
            }"
            :aria-label="`Go to slide ${i + 1}`"
          ></button>
        </template>
      </div>
    </div>
  </div>
</section>
{% endif %}

<section class="py-12 bg-background-medium dark:bg-zinc-900">
  <div class="max-w-4xl mx-auto px-4 text-center">
    <p class="text-lg mb-4">Interested in how this approach translates to your roadmap?</p>
    <div class="flex flex-wrap gap-4 justify-center">
      <a href="/case-studies/" class="hero-cta hero-cta--secondary">Back to case studies</a>
      <a href="/for-businesses/" class="hero-cta hero-cta--primary">Start a project</a>
    </div>
  </div>
</section>
