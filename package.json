{
  "name": "bc-web-studio",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm-run-all --parallel build:css:watch eleventy:serve",
    "build": "npm run build:css && npm run eleventy:build",
    "sass:build": "sass src/scss/main.scss ./.tmp/style.css --no-source-map",
    "sass:watch": "sass --watch src/scss/main.scss:./.tmp/style.css --no-source-map",
    "postcss:build": "postcss ./.tmp/style.css -o ./dist/style.css",
    "postcss:watch": "postcss ./.tmp/style.css -o ./dist/style.css --watch",
    "build:css": "npm run sass:build && npm run postcss:build",
    "build:css:watch": "npm run sass:build && npm-run-all --parallel sass:watch postcss:watch",
    "build:js": "esbuild src/js/main.js --bundle --outdir=dist/js --format=esm --target=es2017 --sourcemap",
    "lint": "npm run build:css && npm run eleventy:build && npm run lint:html",
    "lint:html": "node scripts/lint-html.js",
    "eleventy:serve": "eleventy --serve",
    "eleventy:build": "eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.1.2",
    "esbuild": "^0.21.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "sass": "^1.77.8",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "alpinejs": "^3.14.9",
    "simple-icons": "^16.6.1"
  }
}
