{
  "name": "bc-web-studio",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm-run-all --parallel build:css:watch eleventy:serve",
    "build": "npm-run-all build:css eleventy:build",
    "build:css": "postcss ./src/style.css -o ./dist/style.css",
    "build:css:watch": "postcss ./src/style.css -o ./dist/style.css --watch",
    "build:js": "esbuild src/js/main.js --bundle --outdir=dist/js --format=esm --target=es2017 --sourcemap",
    "lint": "npm run build:css && npm run eleventy:build && npm run lint:html",
    "lint:html": "node scripts/lint-html.js",
    "eleventy:serve": "eleventy --serve",
    "eleventy:build": "eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.0",
    "tailwindcss": "^3.4.17",
    "esbuild": "^0.21.5"
  },
  "dependencies": {
    "alpinejs": "^3.14.9"
  }
}
