{
  "name": "bc-web-studio",
  "version": "1.0.0",
  "scripts": {
    "build:css": "postcss src/style.css -o dist/style.css",
    "build": "npm run build:css && eleventy",
    "dev": "npm run build:css && npm-run-all --parallel build:css:watch eleventy:serve",
    "build:css:watch": "postcss src/style.css -o dist/style.css --watch",
    "eleventy:serve": "eleventy --serve"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "alpinejs": "^3.14.9"
  }
}
